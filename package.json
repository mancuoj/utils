{
  "name": "@mancuoj/utils",
  "description": "Common JavaScript/TypeScript utilities",
  "version": "0.0.17",
  "type": "module",
  "files": [
    "dist"
  ],
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "author": "Mancuoj <mancuoj@gmail.com>",
  "license": "MIT",
  "repository": "mancuoj/utils",
  "keywords": [
    "mancuoj",
    "utils",
    "typescript"
  ],
  "scripts": {
    "build": "bunup",
    "dev": "bunup --watch",
    "tsc": "tsc --noEmit",
    "format": "prettier -w .",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "release": "bumpp && bun publish --access public"
  },
  "devDependencies": {
    "@types/bun": "^1.3.6",
    "bumpp": "^10.4.0",
    "bunup": "^0.16.20",
    "typescript": "^5.9.3",
    "@mancuoj/prettier-config": "^0.5.4",
    "prettier": "^3.8.1"
  },
  "prettier": "@mancuoj/prettier-config"
}
